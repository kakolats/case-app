{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~shared/*": ["../../shared/*"]
    },
    "rootDirs": ["./src", "../shared"]
  },
  "include": ["src/**/*", "shared/**/*", "database"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
